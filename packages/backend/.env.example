# Production Environment Configuration for TracceAqua Backend

# Application
NODE_ENV=production
PORT=3001
LOG_LEVEL=info

# Database (Railway PostgreSQL)
DATABASE_URL=${DATABASE_URL}

# JWT Configuration
JWT_SECRET=${JWT_SECRET}
JWT_EXPIRES_IN=7d

# CORS Configuration
CORS_ORIGIN=${FRONTEND_URL}

# File Upload & IPFS
PINATA_JWT=${PINATA_JWT}
PINATA_GATEWAY_URL=https://gateway.pinata.cloud
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf,text/csv

# Blockchain Configuration
SEPOLIA_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com
CONTRACT_ADDRESS=${CONTRACT_ADDRESS}
DEPLOYER_PRIVATE_KEY=${DEPLOYER_PRIVATE_KEY}
ETHERSCAN_API_KEY=${ETHERSCAN_API_KEY}
CHAIN_ID=11155111
GAS_PRICE=20
GAS_LIMIT=500000
BLOCKCHAIN_MAX_RETRIES=3
BLOCKCHAIN_RETRY_DELAY=5000

# External URLs
FRONTEND_URL=${FRONTEND_URL}
BACKEND_URL=${BACKEND_URL}

# Rate Limiting (Production)
THROTTLE_SHORT_LIMIT=5
THROTTLE_MEDIUM_LIMIT=50
THROTTLE_LONG_LIMIT=500

# Security
BCRYPT_ROUNDS=12
SESSION_SECRET=${SESSION_SECRET}

# Monitoring & Logging
SENTRY_DSN=${SENTRY_DSN}
LOG_TO_FILE=true
LOG_FILE_PATH=/tmp/tracceaqua.log

# Feature Flags
ENABLE_BLOCKCHAIN=true
ENABLE_FILE_UPLOAD=true
ENABLE_CONSUMER_FEEDBACK=true
ENABLE_PUBLIC_STATS=true